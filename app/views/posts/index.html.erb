<h1>Posts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>
        Overtime Requested
      </th>
      <th>
        Date
      </th>
      <th class="hidden-xs">
        Rationale
      </th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody id="posts">
    <%= render @posts %>
  </tbody>
</table>

<div id="paginator">
  <%= paginate @posts, remote: true %>
</div>